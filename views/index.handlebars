
<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Ready to Eat:</h2>
      {{#each burger_data}}
			  {{#unless this.devoured}}
          <p>{{this.id}}. {{this.burger_name}}
            <form class="devour-form button-size">
						<input input type="hidden" class="burger_id" type="text" value={{this.id}}>
						<button type="submit" class="btn btn-warning btn-sm">Devour it!</button>
					  </form>
				  </p>
        {{/unless}}
			{{/each}}
    </div>
    <div class="col-sm">
      <h2>Create your burger here!</h2>
      <form action="/burgers/create" method="POST">
				<input type="text" class="form-control" name="burger_name" value="" id="enter_text"><br>
				<button type="submit" class="btn btn-success" id="text-enter-button">Submit</button>
			</form>
    </div>
    <div class="col-sm">
      <h2>Already Devoured:</h2>
      {{#each burger_data}}
			  {{#if this.devoured}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.burger_name}}" readonly><br>
				{{/if}}
			{{/each}}
    </div>
  </div>
</div>



